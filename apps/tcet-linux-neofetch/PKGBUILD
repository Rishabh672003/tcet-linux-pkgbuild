# Maintainer: Akash6222
# Project: TCET Linux
pkgname=tcet-linux-neofetch
_pkgname=neofetch
pkgver=23.08
pkgrel=1
pkgdesc="A CLI system information tool written in BASH that supports displaying images."
arch=('x86_64')
url="https://github.com/tcet-opensource/tcet-linux-neofetch"
license=('MIT')
provides=($_pkgname)
conflicts=($_pkgname)
depends=('bash')
makedepends=('git')
source=("$pkgname::git+https://github.com/tcet-opensource/tcet-linux-neofetch.git")
md5sums=('SKIP')
sha256sums=('SKIP')

package() {
  cd $pkgname
  make DESTDIR="$pkgdir" install
  install -D -m644 LICENSE.md "$pkgdir/usr/share/licenses/neofetch/LICENSE.md"
}
