# Maintainer: Akash6222
# Project: TCET Linux

pkgname=task-manager
pkgver=23.08
pkgrel=1
pkgdesc="Task Manager for TCET Linux"
arch=('x86_64')
url="https://github.com/tcet-opensource/tcet-linux-task-manager"
license=('GPL3')

conflicts=()
provides=("${pkgname}")
options=(!strip !emptydirs)
source=(${pkgname}::"git+${url}")
sha256sums=('SKIP')
destname="/usr/share/applications/"

package() {

    install -dm755 ${pkgdir}${destname}/
    cp -r ${srcdir}/${pkgname}/task-manager.desktop ${pkgdir}${destname}/

}
