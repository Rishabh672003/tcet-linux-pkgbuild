pkgname=tcet-welcome
pkgver=5.27.5
_dirver=$(echo $pkgver | cut -d. -f1-3)
pkgrel=1
pkgdesc='A friendly onboarding wizard for Plasma'
arch=(x86_64)
url='https://github.com/tcet-opensource/tcet-linux-apps'
license=(LGPL)
depends=(knewstuff)
makedepends=(extra-cmake-modules)
groups=(plasma)
source=("git+${url}")
sha256sums=('SKIP')
build() {
  cmake -B build -S src/tcet-linux-apps/$pkgname \
    -DBUILD_TESTING=OFF
  cmake --build build
}

package() {
  DESTDIR="$pkgdir" cmake --install build
}
